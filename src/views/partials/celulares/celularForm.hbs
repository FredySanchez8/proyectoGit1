<div class="card card-body p-4 rounded-0 bg-dark text-white">
  <h4>Agregar Celulares</h4>
  <form action="/celulares/agregar" method="POST">

    <div>

      <label for="clave">Clave:</label>
      <input type="text" name="clave" placeholder="Clave" id="clave" class="form-control bg-white text-black"/>
    </div>

    <div>

      <label for="marca">Marca:</label>
      <input type="text" name="marca" placeholder="Marca" id="marca" class="form-control bg-white text-black"/>
    </div>

    <div>

      <label for="precio">Precio:</label>
      <input type="text" name="precio" placeholder="Precio" id="precio" class="form-control bg-white text-black" />
    </div>

    <div>
      <label for="fechaLanzamiento">Fecha de Lanzamiento:</label>
      <input type="date" name="fechaLanzamiento" id="fechaLanzamiento" class="form-control bg-white text-black" />
    </div>

    <div>
      <label for="ram">RAM:</label>
      <textarea name="ram" placeholder="RAM" class="form-control bg-white text-black" ></textarea>
    </div>

    <div>
      <label for="almacenamiento">Almacenamiento:</label>
      <input
        type="text"
        name="almacenamiento"
        placeholder="Almacenamiento"
        id="almacenamiento"
        class="form-control bg-white text-black"
      />
    </div>

    <div>
      <label for="cantCamaras">Cantidad de camaras:</label>
      <input
        type="text"
        name="cantCamaras"
        placeholder="CantCamaras"
        id="cantCamaras"
        class="form-control bg-white text-black"
      />
    </div>

    <button class="btn btn-success btn-sm mt-2">Agregar</button>
  </form>
</div>